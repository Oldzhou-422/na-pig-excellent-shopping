page{
  background-color: #eee;
}
.search-input{
  display: flex;
  padding: 20rpx;
}
.search-input input{
  flex: 6;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 15rpx 10rpx;
  font-size: 32rpx;
  margin-right: 15rpx;
}
button{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  color: #fff;
  background-color:var(--themeColor);
}

.search-result{
  width: 95%;
  background-color: #fff;
  margin-left: 15rpx;
}
.search-result-item{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 15rpx 20rpx;
  border-bottom: 1rpx solid #666;
  font-size: 32rpx;
}
