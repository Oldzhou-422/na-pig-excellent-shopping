.goods-list{
  display: flex;
  height: 240rpx;
  border-bottom: 2px solid rgb(248, 245, 245);
}
.goods-list-img{
  flex: 2;
  background-color: #eee;
  display: flex;
  justify-content: center;
  align-items: center;

}
.goods-list-img image{
  width: 80%;
  height: 80%;
}
.goods-list-info{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  position: relative;
  left: 9px;
}
.goods-list-title{
  width: 90%;
  
  font-size: 26rpx;
}
.goods-list-price{
  color: var(--themeColor);
  font-size: 30rpx;
}