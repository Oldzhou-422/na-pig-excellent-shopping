.goods-list{
  display: flex;
  height: 240rpx;
  border-bottom: 2px solid rgb(248, 245, 245);
}
.goods-list-img{
  flex: 2;
  background-color: #eee;
  display: flex;
  justify-content: center;
  align-items: center;

}
.goods-list-img image{
  width: 80%;
  height: 80%;
}
.goods-list-info{ 
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  position: relative;
  left: 9px;
}
.goods-list-title{
  width: 90%;
  
  font-size: 26rpx;
}
.goods-list-price{
  color: var(--themeColor);
  font-size: 30rpx;
}

/* 额外功能 */
.myFoots{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #eee;
  z-index: 99;
  position: fixed;
  bottom: 140rpx;
  right: 40rpx;
  padding-left: 4rpx;
}
.myFoots view{
  font-size: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.backtop{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #eee;
  z-index: 99;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  
}
.backtop view{
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 6rpx;
  
}